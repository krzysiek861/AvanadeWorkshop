{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "serviceBus": {
      "type": "object"
    }
  },
  "variables": {
    "gamesTopicName": "gamemessagemodel",
    "gamesTopicNestedName": "[concat(parameters('serviceBus').name, '/gamemessagemodel')]",
    "gamesSubscriptionName": "[concat(parameters('serviceBus').name, '/gamemessagemodel/webjobssubscription')]",
    "newsletterTopicName": "newsletter",
    "newsletterTopicNestedName": "[concat(parameters('serviceBus').name, '/newsletter')]",
    "newsletterSubscriptionName": "[concat(parameters('serviceBus').name, '/newsletter/webjobssubscription')]"
  },
  "resources": [
    {
      "apiVersion": "2017-04-01",
      "location": "[resourceGroup().location]",
      "name": "[parameters('serviceBus').name]",
      "properties": {
        "serviceBusEndpoint": "[concat('https://', parameters('serviceBus').name,'.servicebus.windows.net:443/')]",
        "enabled": true
      },
      "sku": {
        "name": "Standard",
        "tier": "Standard"
      },
      "type": "Microsoft.ServiceBus/namespaces"
    },
    {
      "apiVersion": "2017-04-01",
      "dependsOn": [
        "[concat('Microsoft.ServiceBus/namespaces/', parameters('serviceBus').name)]"
      ],
      "location": "[resourceGroup().location]",
      "name": "[parameters('serviceBus').AuthorizationRulesName]",
      "properties": {
        "rights": [
          "Listen",
          "Manage",
          "Send"
        ]
      },
      "type": "Microsoft.ServiceBus/namespaces/AuthorizationRules"
    },
    {
      "apiVersion": "2017-04-01",
      "name": "[variables('gamesTopicNestedName')]",
      "type": "Microsoft.ServiceBus/namespaces/topics",
      "dependsOn": [
        "[concat('Microsoft.ServiceBus/namespaces/', parameters('serviceBus').name)]"
      ],
      "properties": {
        "path": "[variables('gamesTopicNestedName')]"
      },
      "resources": [
        {
          "apiVersion": "2017-04-01",
          "name": "[variables('gamesSubscriptionName')]",
          "type": "Microsoft.ServiceBus/namespaces/topics/subscriptions",
          "dependsOn": [
            "[variables('gamesTopicName')]"
          ],
          "properties": {
            "maxDeliveryCount": 3
          }
        }
      ]
    },
    {
      "apiVersion": "2017-04-01",
      "name": "[variables('newsletterTopicNestedName')]",
      "type": "Microsoft.ServiceBus/namespaces/topics",
      "dependsOn": [
        "[concat('Microsoft.ServiceBus/namespaces/', parameters('serviceBus').name)]"
      ],
      "properties": {
        "path": "[variables('newsletterTopicNestedName')]"
      },
      "resources": [
        {
          "apiVersion": "2017-04-01",
          "name": "[variables('newsletterSubscriptionName')]",
          "type": "Microsoft.ServiceBus/namespaces/topics/subscriptions",
          "dependsOn": [
            "[variables('newsletterTopicName')]"
          ],
          "properties": {
            "maxDeliveryCount": 3
          }
        }
      ]
    }
  ],
  "outputs": {
    "serviceBusId": {
      "type": "string",
      "value": "[resourceId('Microsoft.ServiceBus/namespaces/authorizationRules', parameters('serviceBus').name, parameters('serviceBus').defaultSASKeyName)]"
    },
    "primaryConnectionString": {
      "type": "string",
      "value": "[listkeys(resourceId('Microsoft.ServiceBus/namespaces/authorizationRules', parameters('serviceBus').name, parameters('serviceBus').defaultSASKeyName), '2017-04-01').primaryConnectionString]"
    },
    "primaryKey": {
      "type": "string",
      "value": "[listkeys(resourceId('Microsoft.ServiceBus/namespaces/authorizationRules', parameters('serviceBus').Name, parameters('serviceBus').defaultSASKeyName), '2017-04-01').primaryKey]"
    }
  }
}
